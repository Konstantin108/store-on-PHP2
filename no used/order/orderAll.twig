{% extends 'layouts/main.twig' %}
{% block title %}Корзина{% endblock %}
{% block content %}
    {% for good in goods %}
        <h2>{{ good.name }}</h2>
        <h3>{{ good.price }}р.</h3>
        <a href="/good/one/?id={{ good.id }}">подробнее</a>
        <hr>
    {% else %}
        <h3 style="color: red">Список пуст</h3>
    {% endfor %}
{% endblock %}